{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "outDir": "./dist",
    "paths": {
      "__mocks__/*": ["src/__mocks__/*"],
      "test/*": ["test/*"],
      "config/*": ["src/config/*"],
      "constants/*": ["src/constants/*"],
      "controllers/*": ["src/controllers/*"],
      "decorators/*": ["src/decorators/*", "src/graphql/decorators/*"],
      "enums/*": ["src/graphql/enums/*"],
      "factories/*": ["test/factories/*"],
      "guards/*": ["src/auth/guards/*"],
      "helpers/*": ["test/helpers/*"],
      "interceptors/*": ["src/interceptors/*"],
      "loggers/*": ["src/loggers/*"],
      "middleware/*": ["src/middleware/*"],
      "models/*": ["src/graphql/models/*"],
      "repositories/*": ["src/repositories/*"],
      "resolvers/*": ["src/graphql/resolvers/*"],
      "services/*": ["src/services/*"],
      "strategy/*": ["src/auth/strategy/*"],
      "utils/*": ["src/utils/*"],
      "__fixtures__/*": ["test/__fixtures__/*"],
      "prisma/*": ["prisma/*"],
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2020"
  },
  "include": [
    "bin",
    "src/**/*.ts",
    "test/**/*.ts",
    ".eslintrc.js",
    "jest.config.ts"
  ]
}
